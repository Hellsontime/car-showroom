         class="relative flex flex-col flex-wrap bg-white border-r border-gray-300 p-6 flex-none w-64 md:-ml-64 md:fixed md:top-0 md:z-30 md:h-screen md:shadow-xl animated faster">

        <!-- sidebar content -->
        <div class="flex flex-col">

            <!-- sidebar toggle -->
            <div class="text-right hidden md:block mb-4">
                <button id="sideBarHideBtn">
                    <i class="fad fa-times-circle"></i>
                </button>
            </div>
            <!-- end sidebar toggle -->

            <p class="uppercase text-xs text-gray-600 mb-4 tracking-wider">home</p>

            <!-- link -->
            <a href="./"
               class="mb-3 capitalize font-medium text-sm hover:text-teal-600 transition ease-in-out duration-500">
                <i class="fad fa-shopping-cart text-xs mr-2"></i>
                cars showroom dashboard
            </a>
            <!-- end link -->

            <p class="uppercase text-xs text-gray-600 mb-4 mt-4 tracking-wider">data</p>

            <!-- link -->
            <a href="./cars-sold-last-year" class="mb-3 capitalize font-medium text-sm hover:text-teal-600 transition ease-in-out duration-500">
                <i class="fad fa-calendar-edit text-xs mr-2"></i>
                sold last year
            </a>
            <!-- end link -->

            <!-- link -->
            <a href="./unsold-cars" class="mb-3 capitalize font-medium text-sm hover:text-teal-600 transition ease-in-out duration-500">
                <i class="fad fa-file-invoice-dollar text-xs mr-2"></i>
                unsold cars
            </a>
            <!-- end link -->

            <!-- link -->
            <a href="./cars-currently-on-sale" class="mb-3 capitalize font-medium text-sm hover:text-teal-600 transition ease-in-out duration-500">
                <i class="fad fa-folder-open text-xs mr-2"></i>
                currently on sale
            </a>
            <!-- end link -->

        </div>
        <!-- end sidebar content -->

    </div>
    <!-- end sidebar -->

{% endblock %}